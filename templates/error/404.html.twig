{% block head %}
    <style type="text/css">
        body {

	margin: 0px;
	padding: 0px;

}

.page-404 {

	display: grid;
	grid-template-columns: 1fr;
	grid-template-rows: 1fr;
	height: 100vh;
	width: 100vw;
	background-color: black;

}

.navigation-404 {

	display: flex;
	width: 100%;
	justify-content: center;
	position: relative;
	z-index: 10;

}

.navigation-404 > a {

	padding: 1rem;
	color: white;
	background-color: black;
	text-decoration: none;
	font-size: 1.3rem;
	-webkit-transition-property: background-color, color;
	-moz-transition-property: background-color, color;
	-o-transition-property: background-color, color;
	-webkit-transition-duration: 1s;
	-moz-transition-duration: 1s;
	-o-transition-duration: 1s;

}

.navigation-404 > a:hover {

	background-color: white;
	color: black;

}

.number-404 {

	box-sizing: border-box;
	position: absolute;
	top: 0px;
	bottom: 0px;
	left: 0px;
	right: 0px;
	z-index: 9;
	display: flex;
	justify-content: center;

}

.number-404 > span {

	align-self: center;
	color: white;
	font-size: 2rem;

}
    </style>
{% endblock %}

{% block content %}
    				<div class="page-404">
				<div>
				<div class="navigation-404">
					<a href="/" >KRAV MAGA TUZLA</a>
					<a href="/galerija">Galerija</a>
					<a href="/informacije">Info</a>
					<a href="/contact">Kontakt</a>
				</div>		
				<div class="number-404"><span>404</span></div>
				</div>
			     </div>
{% endblock %}
